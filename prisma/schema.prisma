generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(cuid())
  email     String   @unique
  senha     String
  
  perfil Perfil?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("usuarios")
}

model Perfil {
  id        String  @id @default(cuid())
  nome      String
  sobrenome String
  avatar    String?

  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String @unique

  profissional Profissional?
  aluno        Aluno?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("perfis")
}

model Profissional {
  id String @id @default(cuid())

  Treino Treino[]
  
  perfil Perfil @relation(fields: [perfilId], references: [id])
  perfilId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profissionais")
}

model Aluno {
  id String @id @default(cuid())

  Treino Treino[]
  
  perfil Perfil @relation(fields: [perfilId], references: [id])
  perfilId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("alunos")
}

model Treino {
  id        String   @id @default(cuid())
  duracao   String

  Profissional   Profissional @relation(fields: [profissionalId], references: [id])
  profissionalId String

  Aluno   Aluno   @relation(fields: [alunoId], references: [id])
  alunoId String

  Serie   Serie?  @relation(fields: [serieId], references: [id])
  serieId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("treinos")
}

model Serie {
  id        String   @id @default(cuid())
  title     String

  Treino           Treino[]
  SeriesExercicios SeriesExercicios[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("series")
}

model Exercicio {
  id        String @id @default(cuid())
  nome      String
  descricao String

  SeriesExercicios SeriesExercicios[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("exercicios")
}

model SeriesExercicios {
  id String @id @default(cuid())
  series     Int
  repeticoes Int

  Serie   Serie  @relation(fields: [serieId], references: [id])
  serieId String

  Exercicio   Exercicio @relation(fields: [exercicioId], references: [id])
  exercicioId String

  Modalidade   Modalidade @relation(fields: [modalidadeId], references: [id])
  modalidadeId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("series_exercicios")
}

model Modalidade {
  id   String @id @default(cuid())
  nome String

  SeriesExercicios SeriesExercicios[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("modalidades")
}
